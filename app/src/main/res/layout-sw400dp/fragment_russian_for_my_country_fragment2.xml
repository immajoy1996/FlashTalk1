<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white_smoke"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".RussianForMyCountryFragment2">

        <!-- TODO: Update blank fragment layout -->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_size"
            android:layout_alignParentTop="true"
            android:background="@color/medium_sea_green"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="@color/white_smoke">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/back_button"
                        android:layout_width="@dimen/arrow_button_width"
                        android:layout_height="@dimen/arrow_button_height"
                        android:background="@drawable/arrow_back_pressed" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="@integer/myfriendshouse_fragment1_title_weight"
                    android:gravity="center|left"
                    android:text="For His Country"
                    android:textColor="@color/white_smoke"
                    android:textSize="@dimen/toolbar_font_size"
                    android:textStyle="bold"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <com.example.immanuel.flashtalk.CircularImageView2
                        android:id="@+id/audio_white"
                        android:layout_width="@dimen/circular_button_volume_width"
                        android:layout_height="@dimen/circular_button_volume_height"
                        android:src="@drawable/volumetrans2"
                        android:visibility="visible"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/forward_button"
                        android:layout_width="@dimen/arrow_button_width"
                        android:layout_height="@dimen/arrow_button_height"
                        android:background="@drawable/arrow_forward_pressed" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="casual"
            android:gravity="center"
            android:padding="@dimen/myfriendshouse_fragment2_padding"
            android:text="Remember that его, её, and их always stay the same regardless of gender or case."
            android:textColor="@color/black"
            android:textSize="@dimen/myfriendshouse_fragment2_font_size_intro"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/activity_horizontal_margin"
            >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/myfriendshouse_fragment2_padding"
                    >

                    <TextView
                        android:id="@+id/example1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="Я читаю ye-vo роман."
                        android:textColor="@color/transliteration_color"
                        android:textSize="@dimen/myfriendshouse_fragment2_font_size_intro"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/explanation1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="This is the house of his friend."
                        android:textColor="@color/transliteration_color"
                        android:textSize="@dimen/myfriendshouse_fragment2_font_size_intro"
                        android:textStyle="italic"

                        />

                    <TextView
                        android:id="@+id/example2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/myfriendshouse_fragment2_vertical_spacing"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="Я читаю ye-vo книгу."
                        android:textColor="@color/red"
                        android:textSize="@dimen/myfriendshouse_fragment2_font_size_intro"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/explanation2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="This is the house of his sister."
                        android:textColor="@color/red"
                        android:textSize="@dimen/myfriendshouse_fragment2_font_size_intro"
                        android:textStyle="italic"

                        />

                    <TextView
                        android:id="@+id/example3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/myfriendshouse_fragment2_vertical_spacing"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="Я вижу ye-vo здание."
                        android:textColor="@color/medium_sea_green"
                        android:textSize="@dimen/myfriendshouse_fragment2_font_size_intro"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/explanation3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="This is the door of his building."
                        android:textColor="@color/medium_sea_green"
                        android:textSize="@dimen/myfriendshouse_fragment2_font_size_intro"
                        android:textStyle="italic"

                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/myfriendshouse_fragment2_vertical_spacing"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/myfriendshouse_fragment2_padding"
                    >

                    <TextView
                        android:id="@+id/example4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="Я читаю ye-yo роман."
                        android:textColor="@color/transliteration_color"
                        android:textSize="@dimen/myfriendshouse_fragment2_font_size_intro"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/explanation4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="This is the house of her friend."
                        android:textColor="@color/transliteration_color"
                        android:textSize="@dimen/myfriendshouse_fragment2_font_size_intro"
                        android:textStyle="italic"

                        />

                    <TextView
                        android:id="@+id/example5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/myfriendshouse_fragment2_vertical_spacing"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="Я читаю ye-yo книгу."
                        android:textColor="@color/red"
                        android:textSize="@dimen/myfriendshouse_fragment2_font_size_intro"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/explanation5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="This is the house of her sister."
                        android:textColor="@color/red"
                        android:textSize="@dimen/myfriendshouse_fragment2_font_size_intro"
                        android:textStyle="italic"

                        />

                    <TextView
                        android:id="@+id/example6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/myfriendshouse_fragment2_vertical_spacing"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="Я вижу ye-vo здание."
                        android:textColor="@color/medium_sea_green"
                        android:textSize="@dimen/myfriendshouse_fragment2_font_size_intro"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/explanation6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="This is the door of her building"
                        android:textColor="@color/medium_sea_green"
                        android:textSize="@dimen/myfriendshouse_fragment2_font_size_intro"
                        android:textStyle="italic"

                        />

                </LinearLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>

    </LinearLayout>