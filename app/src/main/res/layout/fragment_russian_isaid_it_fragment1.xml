<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_smoke"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RussianISaidItFragment1">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_size"
        android:layout_alignParentTop="true"
        android:background="@color/medium_sea_green"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/white_smoke">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_width="@dimen/arrow_button_width"
                    android:layout_height="@dimen/arrow_button_height"
                    android:background="@drawable/arrow_back_pressed" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="@integer/these_people_fragment1_title_weight"
                android:gravity="center|left"
                android:text="I Said It!"
                android:textColor="@color/white_smoke"
                android:textSize="@dimen/toolbar_font_size"
                android:textStyle="bold"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <com.example.immanuel.flashtalk.CircularImageView2
                    android:id="@+id/audio_white"
                    android:layout_width="@dimen/circular_button_volume_width"
                    android:layout_height="@dimen/circular_button_volume_height"
                    android:src="@drawable/volumetrans2"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/forward_button"
                    android:layout_width="@dimen/arrow_button_width"
                    android:layout_height="@dimen/arrow_button_height"
                    android:background="@drawable/arrow_forward_pressed" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fontFamily="casual"
        android:gravity="center"
        android:padding="@dimen/these_people_fragment1_padding_intro"
        android:text="The past tense is very simple. Just remove the -ть ending and add the ending. The ending you add depends on whether the subject is masc., fem., neut., or pl. Get the pattern?"
        android:textColor="@color/black"
        android:textSize="@dimen/these_people_fragment1_font_size_translit"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        android:gravity="center"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/these_people_fragment1_height"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:padding="@dimen/these_people_fragment1_padding_boxes"
                        android:text="говорить "
                        android:background="@color/medium_sea_green"
                        android:textColor="@color/white"
                        android:textSize="@dimen/basic_verbs_font_size_word"
                        android:textStyle="bold" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_grey"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/these_people_fragment1_height"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:padding="@dimen/these_people_fragment1_padding_boxes"
                        android:text="говорил"
                        android:textColor="@color/transliteration_color"
                        android:textSize="@dimen/basic_verbs_font_size_word"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:padding="@dimen/these_people_fragment1_padding_boxes"
                        android:text="gah-var-eel"
                        android:textSize="@dimen/basic_verbs_font_size_word"
                        android:textColor="@color/transliteration_color"
                        android:textStyle="bold" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_grey"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/these_people_fragment1_height"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:padding="@dimen/these_people_fragment1_padding_boxes"
                        android:text="говорила"
                        android:textColor="@color/red"
                        android:textSize="@dimen/basic_verbs_font_size_word"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:padding="@dimen/these_people_fragment1_padding_boxes"
                        android:text="gah-var-eel-a"
                        android:textColor="@color/red"
                        android:textSize="@dimen/basic_verbs_font_size_word"
                        android:textStyle="bold" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_grey"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/these_people_fragment1_height"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:padding="@dimen/these_people_fragment1_padding_boxes"
                        android:text="говорило"
                        android:textColor="@color/medium_sea_green"
                        android:textSize="@dimen/basic_verbs_font_size_word"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:padding="@dimen/these_people_fragment1_padding_boxes"
                        android:text="gah-var-eel-o"
                        android:textColor="@color/medium_sea_green"
                        android:textSize="@dimen/basic_verbs_font_size_word"
                        android:textStyle="bold" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_grey"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/these_people_fragment1_height"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:padding="@dimen/these_people_fragment1_padding_boxes"
                        android:text="говорили"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/basic_verbs_font_size_word"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:padding="@dimen/these_people_fragment1_padding_boxes"
                        android:text="gah-var-eel-i"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/basic_verbs_font_size_word"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>