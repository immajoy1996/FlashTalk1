<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_smoke"
    tools:context=".RussianIHaveFragment1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_size"
        android:layout_alignParentTop="true"
        android:background="@color/medium_sea_green"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/white_smoke">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_width="@dimen/arrow_button_width"
                    android:layout_height="@dimen/arrow_button_height"
                    android:background="@drawable/arrow_back_pressed" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="@integer/ican_fragment3_title_weight"
                android:gravity="center|left"
                android:text="Examples"
                android:textColor="@color/white_smoke"
                android:textSize="@dimen/toolbar_font_size"
                android:textStyle="bold"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="@integer/ican_fragment3_volume_weight"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:gravity="center">

                <com.example.immanuel.flashtalk.CircularImageView2
                    android:id="@+id/audio"
                    android:layout_width="@dimen/arrow_button_width"
                    android:layout_height="@dimen/arrow_button_height"
                    android:src="@drawable/volumetrans2"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="@integer/ican_fragment3_games_weight"
                android:gravity="center">

                <com.example.immanuel.flashtalk.CircularImageView2
                    android:id="@+id/games"
                    android:layout_width="@dimen/arrow_button_width"
                    android:layout_height="@dimen/arrow_button_height"
                    android:src="@drawable/chess1"
                    />

            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fontFamily="casual"
        android:gravity="center"
        android:padding="@dimen/myfriendshouse_fragment1_padding"
        android:text="After у, the pronouns его, её and их become него, неё, and них respectively. "
        android:textColor="@color/black"
        android:textSize="@dimen/myfriendshouse_fragment1_font_size_intro"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        android:gravity="center"
        >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/imreadingmybook_fragment3_padding"
            android:background="@drawable/rect_white"
            >

            <TextView
                android:id="@+id/example1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="У него есть брат."
                android:textColor="@color/black"
                android:textSize="@dimen/imreadingmybook_fragment3_font_size_intro"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/explanation1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="I'm in the store."
                android:textColor="@color/transliteration_color"
                android:textSize="@dimen/imreadingmybook_fragment3_font_size_intro"

                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/imreadingmybook_fragment3_padding"
            android:background="@drawable/rect_white"
            >

            <TextView
                android:id="@+id/example2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="У неё есть брат."
                android:textColor="@color/black"
                android:textSize="@dimen/imreadingmybook_fragment3_font_size_intro"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/explanation2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="I'm reading books in the library."
                android:textColor="@color/transliteration_color"
                android:textSize="@dimen/imreadingmybook_fragment3_font_size_intro"

                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/imreadingmybook_fragment3_padding"
            android:background="@drawable/rect_white"
            >

            <TextView
                android:id="@+id/example3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="У них есть дом."
                android:textColor="@color/black"
                android:textSize="@dimen/imreadingmybook_fragment3_font_size_intro"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/explanation3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="Now, I'm in Russia in Moscow."
                android:textColor="@color/transliteration_color"
                android:textSize="@dimen/imreadingmybook_fragment3_font_size_intro"

                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/imreadingmybook_fragment3_padding"
            android:background="@drawable/rect_white"
            >

            <TextView
                android:id="@+id/example4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="У них есть дом."
                android:textColor="@color/black"
                android:textSize="@dimen/imreadingmybook_fragment3_font_size_intro"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/explanation4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="This book is on the table."
                android:textColor="@color/transliteration_color"
                android:textSize="@dimen/imreadingmybook_fragment3_font_size_intro"

                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>