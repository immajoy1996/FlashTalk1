<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_smoke"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RussianISaidItFragment2">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_size"
        android:layout_alignParentTop="true"
        android:background="@color/medium_sea_green"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/white_smoke">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_width="@dimen/arrow_button_width"
                    android:layout_height="@dimen/arrow_button_height"
                    android:background="@drawable/arrow_back_pressed" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="@integer/these_people_fragment2_title_weight"
                android:gravity="center|left"
                android:text="Examples"
                android:textColor="@color/white_smoke"
                android:textSize="@dimen/toolbar_font_size"
                android:textStyle="bold"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="@integer/these_people_fragment2_volume_weight"
                android:layout_height="match_parent"
                android:gravity="center">

                <com.example.immanuel.flashtalk.CircularImageView2
                    android:id="@+id/audio"
                    android:layout_width="@dimen/circular_button_volume_width"
                    android:layout_height="@dimen/circular_button_volume_height"
                    android:src="@drawable/volumetrans2"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="@integer/these_people_fragment2_games_weight"
                android:gravity="center">

                <com.example.immanuel.flashtalk.CircularImageView2
                    android:id="@+id/games"
                    android:layout_width="@dimen/circular_button_games_width"
                    android:layout_height="@dimen/circular_button_games_height"
                    android:src="@drawable/chess1"
                    />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fontFamily="casual"
        android:gravity="center"
        android:padding="@dimen/these_people_fragment2_padding"
        android:text="Let's see the past tense in action. Notice that вы is sometimes the formal &quot;you&quot; but it's still treated as a plural!"
        android:textColor="@color/black"
        android:textSize="@dimen/these_people_fragment2_font_size_intro"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/activity_horizontal_margin"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/these_people_fragment2_padding"
                >

                <TextView
                    android:id="@+id/example1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="В классе мы говорили о политике."
                    android:textColor="@color/black"
                    android:textSize="@dimen/these_people_fragment2_font_size_intro"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/explanation1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="In class, we talked about politics."
                    android:textColor="@color/transliteration_color"
                    android:textSize="@dimen/these_people_fragment2_font_size_intro"
                    android:textStyle="italic"

                    />

                <TextView
                    android:id="@+id/example2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/these_people_fragment2_vertical_spacing"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="В классе она говорила о книге."
                    android:textColor="@color/black"
                    android:textSize="@dimen/these_people_fragment2_font_size_intro"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/explanation2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="In class, she talked about the book."
                    android:textColor="@color/transliteration_color"
                    android:textSize="@dimen/these_people_fragment2_font_size_intro"
                    android:textStyle="italic"

                    />

                <TextView
                    android:id="@+id/example3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/these_people_fragment2_vertical_spacing"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="Вчера вы говорили о президенте?"
                    android:textColor="@color/black"
                    android:textSize="@dimen/these_people_fragment2_font_size_intro"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/explanation3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="Yesterday, you (formal.) talked about the president?"
                    android:textColor="@color/transliteration_color"
                    android:textSize="@dimen/these_people_fragment2_font_size_intro"
                    android:textStyle="italic"

                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

</LinearLayout>