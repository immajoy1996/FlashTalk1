<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_russian_language"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.immanuel.flashtalk.RussianLanguageActivity"
    android:background="@drawable/ocean3"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_size"
        android:layout_alignParentTop="true"
        android:background="@color/medium_sea_green"
        app:layout_constraintTop_toBottomOf="parent"
        app:titleTextColor="@color/white_smoke">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="знать"
                android:gravity="center|left"
                android:layout_weight="20"
                android:textSize="@dimen/toolbar_font_size"
                android:textStyle="bold"
                android:textColor="@color/white_smoke"

                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/fragment_circle_weight"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="@dimen/fragment_circle_size_small"
                    android:layout_height="@dimen/fragment_circle_size_small"
                    android:background="@drawable/circle_tabs"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/fragment_circle_weight"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="@dimen/fragment_circle_size_big"
                    android:layout_height="@dimen/fragment_circle_size_big"
                    android:background="@drawable/circle_tabs1"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/fragment_circle_weight"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="@dimen/fragment_circle_size_small"
                    android:layout_height="@dimen/fragment_circle_size_small"
                    android:background="@drawable/circle_tabs"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/fragment_circle_weight"
                android:gravity="center"
                android:layout_marginRight="15dp"
                >

                <TextView
                    android:layout_width="@dimen/fragment_circle_size_small"
                    android:layout_height="@dimen/fragment_circle_size_small"
                    android:background="@drawable/circle_tabs"
                    />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/main_toolbar"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/medium_sea_green">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyler_view_russian_language"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >

            </android.support.v7.widget.RecyclerView>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>
