<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/medium_sea_green"
    tools:context=".RussianToGoAndReturnOnFootFragment3"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        tools:context=".RussianToGoAndReturnOnFootFragment3">

        <!-- TODO: Update blank fragment layout -->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_fragment3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_size"
            android:layout_alignParentTop="true"
            android:background="@color/medium_sea_green"
            app:titleTextColor="@color/white_smoke">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/back_button"
                        android:layout_width="@dimen/arrow_button_width"
                        android:layout_height="@dimen/arrow_button_height"
                        android:background="@drawable/arrow_back_pressed" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="@integer/ican_fragment3_title_weight"
                    android:gravity="center|left"
                    android:text="Examples"
                    android:textColor="@color/white_smoke"
                    android:textSize="@dimen/toolbar_font_size"
                    android:textStyle="bold"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="@integer/ican_fragment3_volume_weight"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:gravity="center">

                    <com.example.immanuel.flashtalk.CircularImageView2
                        android:id="@+id/audio"
                        android:layout_width="@dimen/arrow_button_width"
                        android:layout_height="@dimen/arrow_button_height"
                        android:src="@drawable/volumetrans2"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="@integer/ican_fragment3_games_weight"
                    android:gravity="center">

                    <com.example.immanuel.flashtalk.CircularImageView2
                        android:id="@+id/games"
                        android:layout_width="@dimen/arrow_button_width"
                        android:layout_height="@dimen/arrow_button_height"
                        android:src="@drawable/chess1"
                        />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.Toolbar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="casual"
            android:gravity="center"
            android:padding="5dp"
            android:text="Some more examples."
            android:textColor="@color/black"
            android:textSize="@dimen/idontunderstand_fragment3_font_size_intro"
            android:textStyle="bold" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/medium_sea_green"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout1"
                    android:layout_marginTop="@dimen/idontunderstand_fragment3_vertical_spacing"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/custom_ripple"
                    >

                    <TextView
                        android:id="@+id/sentence1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/idontunderstand_fragment3_height"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="casual"
                        android:gravity="center|left"
                        android:text="Сегодня, я иду в библиотеку."
                        android:textColor="@color/black"
                        android:textSize="@dimen/idontunderstand_fragment3_font_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_grey"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/idontunderstand_fragment3_height"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="casual"
                        android:gravity="center|left"
                        android:text="Today, I'm going (on foot) to the library."
                        android:textColor="@color/transliteration_color"
                        android:textSize="@dimen/idontunderstand_fragment3_font_size"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout2"
                    android:layout_marginTop="@dimen/idontunderstand_fragment3_vertical_spacing"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/custom_ripple"
                    >

                    <TextView
                        android:id="@+id/sentence2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/idontunderstand_fragment3_height"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="casual"
                        android:gravity="center|left"
                        android:text="Ты идешь в улицу сейчас?"
                        android:textColor="@color/black"
                        android:textSize="@dimen/idontunderstand_fragment3_font_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_grey"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/idontunderstand_fragment3_height"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="casual"
                        android:gravity="center|left"
                        android:text="You're going (on foot) to the street now?"
                        android:textColor="@color/transliteration_color"
                        android:textSize="@dimen/idontunderstand_fragment3_font_size"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout3"
                    android:layout_marginTop="@dimen/idontunderstand_fragment3_vertical_spacing"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/custom_ripple"
                    >

                    <TextView
                        android:id="@+id/sentence3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/idontunderstand_fragment3_height"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="casual"
                        android:gravity="center|left"
                        android:text="Мы идём на университет сейчас."
                        android:textColor="@color/black"
                        android:textSize="@dimen/idontunderstand_fragment3_font_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_grey"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/idontunderstand_fragment3_height"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="casual"
                        android:gravity="center|left"
                        android:text="We are going (on foot) to the university now."
                        android:textColor="@color/transliteration_color"
                        android:textSize="@dimen/idontunderstand_fragment3_font_size"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>



        </android.support.v7.widget.CardView>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>