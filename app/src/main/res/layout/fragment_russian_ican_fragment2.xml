<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".RussianICanFragment2">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_fragment2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_size"
        android:layout_alignParentTop="true"
        android:background="@color/medium_sea_green"
        app:titleTextColor="@color/white_smoke">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_width="@dimen/arrow_button_width"
                    android:layout_height="@dimen/arrow_button_height"
                    android:background="@drawable/arrow_back_pressed" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="@integer/ican_fragment2_title_weight"
                android:gravity="center|left"
                android:text="Examples"
                android:textColor="@color/white_smoke"
                android:textSize="@dimen/toolbar_font_size"
                android:textStyle="bold"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:gravity="center">

                <com.example.immanuel.flashtalk.CircularImageView2
                    android:id="@+id/audio_white"
                    android:layout_width="@dimen/circular_button_volume_width"
                    android:layout_height="@dimen/circular_button_volume_height"
                    android:src="@drawable/volumetrans2"
                    android:visibility="visible"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/forward_button"
                    android:layout_width="@dimen/circular_button_games_width"
                    android:layout_height="@dimen/circular_button_games_height"
                    android:background="@drawable/arrow_forward_pressed" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/ican_fragment2_height"
        android:fontFamily="casual"
        android:gravity="center"
        android:padding="@dimen/ican_fragment2_padding_intro"
        android:text="Some easy sentences."
        android:textColor="@color/black"
        android:textSize="@dimen/ican_fragment2_font_size_intro"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/medium_sea_green"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout1"
                android:layout_marginTop="@dimen/ican_fragment2_vertical_spacing"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:background="@drawable/custom_ripple"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ican_fragment2_height"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="casual"
                    android:gravity="center|left"
                    android:text="Я могу говорить по-русски но не понимаю."
                    android:textColor="@color/black"
                    android:textSize="@dimen/ican_fragment2_font_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_grey"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ican_fragment2_height"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="casual"
                    android:gravity="center|left"
                    android:text="I can speak Russian but don't understand."
                    android:textColor="@color/transliteration_color"
                    android:textSize="@dimen/ican_fragment2_font_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout2"
                android:layout_marginTop="@dimen/ican_fragment2_vertical_spacing"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:background="@drawable/custom_ripple"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ican_fragment2_height"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="casual"
                    android:gravity="center|left"
                    android:text="Что ты можешь делать?"
                    android:textColor="@color/black"
                    android:textSize="@dimen/ican_fragment2_font_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_grey"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ican_fragment2_height"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="casual"
                    android:gravity="center|left"
                    android:text="What can you do?"
                    android:textColor="@color/transliteration_color"
                    android:textSize="@dimen/ican_fragment2_font_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout3"
                android:layout_marginTop="@dimen/ican_fragment2_vertical_spacing"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:background="@drawable/custom_ripple"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ican_fragment2_height"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="casual"
                    android:gravity="center|left"
                    android:text="Я не могу делать это."
                    android:textColor="@color/black"
                    android:textSize="@dimen/ican_fragment2_font_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_grey"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ican_fragment2_height"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="casual"
                    android:gravity="center|left"
                    android:text="I can't do that."
                    android:textColor="@color/transliteration_color"
                    android:textSize="@dimen/ican_fragment2_font_size"
                    android:textStyle="bold" />

            </LinearLayout>



        </LinearLayout>



    </android.support.v7.widget.CardView>


</LinearLayout>