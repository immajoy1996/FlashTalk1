<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/river1"
        tools:context="com.languageapp.immanuel.flashtalk.RussianAFriendsHouseFragment1">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_size"
            android:layout_alignParentTop="true"
            android:background="@color/medium_sea_green"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="@color/white_smoke">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/back_button"
                        android:layout_width="@dimen/arrow_button_width"
                        android:layout_height="@dimen/arrow_button_height"
                        android:background="@drawable/arrow_back_pressed" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="@integer/accusativecase_fragment1_title_weight"
                    android:gravity="center|left"
                    android:text="A Friend's House"
                    android:textColor="@color/white"
                    android:textSize="@dimen/toolbar_font_size"
                    android:fontFamily="@font/treb_ms_regular"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/forward_button"
                        android:layout_width="@dimen/arrow_button_width"
                        android:layout_height="@dimen/arrow_button_height"
                        android:background="@drawable/arrow_forward_pressed" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fontFamily="@font/treb_ms_regular"
        android:gravity="center"
        android:padding="@dimen/afriendshouse1_fragment1_padding"
        android:text="In Russian you don't say &quot;a friend's house.&quot; You say &quot;the house of a friend&quot;. Get the hang of it with these examples."
        android:textColor="@color/black"
        android:textSize="@dimen/accusativecase_fragment3_font_size_intro"
     />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/activity_horizontal_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rect_white"
                    android:padding="@dimen/afriendshouse1_fragment1_padding">

                    <TextView
                        android:id="@+id/example1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/treb_ms_regular"
                        android:gravity="center"
                        android:text="eng. This is a friend's house."
                        android:textColor="@color/black"
                        android:textSize="@dimen/afriendshouse1_fragment1_font_size_intro" />

                    <TextView
                        android:id="@+id/explanation1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/treb_ms_regular"
                        android:gravity="center"
                        android:text="russ. This is the house of a friend."
                        android:textColor="@color/transliteration_color"
                        android:textSize="@dimen/afriendshouse1_fragment1_font_size_intro" />

                    <TextView
                        android:id="@+id/example2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/afriendshouse1_fragment1_vertical_spacing"
                        android:fontFamily="@font/treb_ms_regular"
                        android:gravity="center"
                        android:text="eng. This is my sister's car."
                        android:textColor="@color/black"
                        android:textSize="@dimen/afriendshouse1_fragment1_font_size_intro" />

                    <TextView
                        android:id="@+id/explanation2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/treb_ms_regular"
                        android:gravity="center"
                        android:text="russ. This is the car of my sister."
                        android:textColor="@color/transliteration_color"
                        android:textSize="@dimen/afriendshouse1_fragment1_font_size_intro" />


                    <TextView
                        android:id="@+id/example3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/afriendshouse1_fragment1_vertical_spacing"
                        android:fontFamily="@font/treb_ms_regular"
                        android:gravity="center"
                        android:text="eng. This my sister's friend's house."
                        android:textColor="@color/black"
                        android:textSize="@dimen/afriendshouse1_fragment1_font_size_intro" />

                    <TextView
                        android:id="@+id/explanation3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/treb_ms_regular"
                        android:gravity="center"
                        android:text="russ. This is the house of a friend of my sister."
                        android:textColor="@color/transliteration_color"
                        android:textSize="@dimen/afriendshouse1_fragment1_font_size_intro" />


                </LinearLayout>


        </LinearLayout>

    </LinearLayout>