<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/river1"
    tools:context="com.languageapp.immanuel.flashtalk.RussianAFriendsHouse2Fragment1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_size"
        android:layout_alignParentTop="true"
        android:background="@color/medium_sea_green"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/white_smoke">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_width="@dimen/arrow_button_width"
                    android:layout_height="@dimen/arrow_button_height"
                    android:background="@drawable/arrow_back_pressed" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="@integer/accusativecase_fragment1_title_weight"
                android:gravity="center|left"
                android:text="Some Rules"
                android:textColor="@color/white"
                android:textSize="@dimen/toolbar_font_size"
                android:fontFamily="@font/treb_ms_regular"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/forward_button"
                    android:layout_width="@dimen/arrow_button_width"
                    android:layout_height="@dimen/arrow_button_height"
                    android:background="@drawable/arrow_forward_pressed" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fontFamily="@font/treb_ms_regular"
        android:gravity="center"
        android:padding="@dimen/afriendshouse2_fragment1_padding"
        android:text="The genitive is the probably the most important case in Russian. Here's how to form it for regular nouns. It's worth memorizing these rules."
        android:textColor="@color/black"
        android:textSize="@dimen/afriendshouse2_fragment1_font_size_intro"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        android:gravity="center"
        >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/afriendshouse2_fragment1_padding"
                android:background="@drawable/rect_white"
                >

                <TextView
                    android:id="@+id/masc_rule1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/treb_ms_regular"
                    android:gravity="center"
                    android:text="* For most masc. nouns, add an а to the end."
                    android:textColor="@color/black"
                    android:textSize="@dimen/afriendshouse2_fragment1_font_size_intro" />

                <TextView
                    android:id="@+id/fem_rule1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/afriendshouse2_fragment1_vertical_spacing"
                    android:fontFamily="@font/treb_ms_regular"
                    android:gravity="center"
                    android:text="* If a fem. noun ends with an а, replace it with an ы."
                    android:textColor="@color/black"
                    android:textSize="@dimen/afriendshouse2_fragment1_font_size_intro" />

                <TextView
                    android:id="@+id/fem_rule2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/treb_ms_regular"
                    android:gravity="center"
                    android:text="* If a fem. noun ends with a я, replace it with an и."
                    android:textColor="@color/black"
                    android:textSize="@dimen/afriendshouse2_fragment1_font_size_intro" />

                <TextView
                    android:id="@+id/neut_rule1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/afriendshouse2_fragment1_vertical_spacing"
                    android:fontFamily="@font/treb_ms_regular"
                    android:gravity="center"
                    android:text="* If a neut. noun ends with an о, replace it with an а."
                    android:textColor="@color/black"
                    android:textSize="@dimen/afriendshouse2_fragment1_font_size_intro" />

                <TextView
                    android:id="@+id/neut_rule2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/treb_ms_regular"
                    android:gravity="center"
                    android:text="* If a neut. noun ends with an е, replace it with an я."
                    android:textColor="@color/black"
                    android:textSize="@dimen/afriendshouse2_fragment1_font_size_intro" />

            </LinearLayout>

    </LinearLayout>

</LinearLayout>