<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_smoke"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RussianImReadingAGoodBookActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white_smoke"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".RussianImReadingAGoodBookActivity">

        <!-- TODO: Update blank fragment layout -->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_size"
            android:layout_alignParentTop="true"
            android:background="@color/medium_sea_green"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="@color/white_smoke">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/back_button"
                        android:layout_width="@dimen/arrow_button_width"
                        android:layout_height="@dimen/arrow_button_height"
                        android:background="@drawable/arrow_back_pressed" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="@integer/imreadingagoodbook_title_weight"
                    android:gravity="center|left"
                    android:text="A Pretty Woman"
                    android:textColor="@color/white_smoke"
                    android:textSize="@dimen/toolbar_font_size"
                    android:textStyle="bold"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="@integer/imreadingagoodbook_volume_weight"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <com.example.immanuel.flashtalk.CircularImageView2
                        android:id="@+id/audio"
                        android:layout_width="@dimen/circular_button_volume_width"
                        android:layout_height="@dimen/circular_button_volume_height"
                        android:src="@drawable/volumetrans2"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="@integer/imreadingagoodbook_games_weight"
                    android:gravity="center">

                    <com.example.immanuel.flashtalk.CircularImageView2
                        android:id="@+id/games"
                        android:layout_width="@dimen/circular_button_games_width"
                        android:layout_height="@dimen/circular_button_games_height"
                        android:src="@drawable/chess1"
                        />

                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/white"
            android:padding="@dimen/imreadingagoodbook_padding"
            android:text="его, её, and их always stay the same regardless of gender or case."
            android:fontFamily="casual"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/imreadingagoodbook_font_size_intro"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin"
            >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/imreadingagoodbook_padding"
                    >

                    <TextView
                        android:id="@+id/example1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="Я читаю ye-vo роман."
                        android:textColor="@color/transliteration_color"
                        android:textSize="@dimen/imreadingagoodbook_font_size_intro"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/explanation1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="I'm reading a good novel."
                        android:textColor="@color/transliteration_color"
                        android:textSize="@dimen/imreadingagoodbook_font_size_intro"
                        android:textStyle="italic"

                        />

                    <TextView
                        android:id="@+id/example2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/imreadingagoodbook_vertical_spacing"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="Я читаю ye-vo книгу."
                        android:textColor="@color/red"
                        android:textSize="@dimen/imreadingagoodbook_font_size_intro"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/explanation2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="I'm reading a good book."
                        android:textColor="@color/red"
                        android:textSize="@dimen/imreadingagoodbook_font_size_intro"
                        android:textStyle="italic"

                        />

                    <TextView
                        android:id="@+id/example3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/imreadingagoodbook_vertical_spacing"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="Я вижу ye-vo здание."
                        android:textColor="@color/medium_sea_green"
                        android:textSize="@dimen/imreadingagoodbook_font_size_intro"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/explanation3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="I know a good place."
                        android:textColor="@color/medium_sea_green"
                        android:textSize="@dimen/imreadingagoodbook_font_size_intro"
                        android:textStyle="italic"

                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/imreadingagoodbook_vertical_spacing"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/imreadingagoodbook_padding"
                    >

                    <TextView
                        android:id="@+id/example4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="Я читаю ye-yo роман."
                        android:textColor="@color/transliteration_color"
                        android:textSize="@dimen/imreadingagoodbook_font_size_intro"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/explanation4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="I'm watching a beautiful movie."
                        android:textColor="@color/transliteration_color"
                        android:textSize="@dimen/imreadingagoodbook_font_size_intro"
                        android:textStyle="italic"

                        />

                    <TextView
                        android:id="@+id/example5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/imreadingagoodbook_vertical_spacing"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="Я читаю ye-yo книгу."
                        android:textColor="@color/red"
                        android:textSize="@dimen/imreadingagoodbook_font_size_intro"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/explanation5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="I see a beautiful woman."
                        android:textColor="@color/red"
                        android:textSize="@dimen/imreadingagoodbook_font_size_intro"
                        android:textStyle="italic"

                        />

                    <TextView
                        android:id="@+id/example6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/imreadingagoodbook_vertical_spacing"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="Я вижу ye-vo здание."
                        android:textColor="@color/medium_sea_green"
                        android:textSize="@dimen/imreadingagoodbook_font_size_intro"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/explanation6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="I see an beautiful photo."
                        android:textColor="@color/medium_sea_green"
                        android:textSize="@dimen/imreadingagoodbook_font_size_intro"
                        android:textStyle="italic"

                        />

                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/imreadingagoodbook_vertical_spacing"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/imreadingagoodbook_padding"
                    >

                    <TextView
                        android:id="@+id/example7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="Я читаю eekh роман."
                        android:textColor="@color/transliteration_color"
                        android:textSize="@dimen/imreadingagoodbook_font_size_intro"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/explanation7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="I'm reading a interesting novel."
                        android:textColor="@color/transliteration_color"
                        android:textSize="@dimen/imreadingagoodbook_font_size_intro"
                        android:textStyle="italic"

                        />

                    <TextView
                        android:id="@+id/example8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/imreadingagoodbook_vertical_spacing"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="She's a beautiful woman."
                        android:textColor="@color/red"
                        android:textSize="@dimen/imreadingagoodbook_font_size_intro"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/explanation8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="I'm reading an interesting book."
                        android:textColor="@color/red"
                        android:textSize="@dimen/imreadingagoodbook_font_size_intro"
                        android:textStyle="italic"

                        />

                    <TextView
                        android:id="@+id/example9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/imreadingagoodbook_vertical_spacing"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="Я вижу eekh здание."
                        android:textColor="@color/medium_sea_green"
                        android:textSize="@dimen/imreadingagoodbook_font_size_intro"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/explanation9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="I see an interesting photo."
                        android:textColor="@color/medium_sea_green"
                        android:textSize="@dimen/imreadingagoodbook_font_size_intro"
                        android:textStyle="italic"

                        />

                </LinearLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>