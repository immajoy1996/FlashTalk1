<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/river1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RussianThesePeopleFragment1">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_size"
        android:layout_alignParentTop="true"
        android:background="@color/medium_sea_green"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/white_smoke">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_width="@dimen/arrow_button_width"
                    android:layout_height="@dimen/arrow_button_height"
                    android:background="@drawable/arrow_back_pressed" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="@integer/these_people_fragment1_title_weight"
                android:gravity="center|left"
                android:text="These People"
                android:textColor="@color/white"
                android:textSize="@dimen/toolbar_font_size"
                android:fontFamily="@font/treb_ms_regular"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:gravity="center">

                <com.example.immanuel.flashtalk.CircularImageView2
                    android:id="@+id/audio_white"
                    android:layout_width="@dimen/circular_button_volume_width"
                    android:layout_height="@dimen/circular_button_volume_height"
                    android:src="@drawable/volumetrans2"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/forward_button"
                    android:layout_width="@dimen/arrow_button_width"
                    android:layout_height="@dimen/arrow_button_height"
                    android:background="@drawable/arrow_forward_pressed" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fontFamily="@font/treb_ms_regular"
        android:gravity="center"
        android:padding="@dimen/these_people_fragment1_padding_intro"
        android:text='To say "this", use either этот (etot), эта (eta) or это (eta). Which one you use depends on the gender of the noun. Get the pattern?'
        android:textColor="@color/black"
        android:textSize="@dimen/these_people_fragment1_font_size_translit"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/activity_horizontal_margin"
        >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gender_fragment2_height"
            android:orientation="horizontal"
            android:background="@drawable/rect_white"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/treb_ms_regular"
                android:gravity="center"
                android:padding="5dp"
                android:text="pl."
                android:textColor="@color/purple"
                android:textSize="@dimen/gender_fragment3_font_size_translit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/treb_ms_regular"
                android:gravity="center"
                android:padding="5dp"
                android:text="these people"
                android:textColor="@color/purple"
                android:textSize="@dimen/gender_fragment3_font_size_translit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/treb_ms_regular"
                android:gravity="center"
                android:padding="5dp"
                android:text="эти друзья"
                android:textColor="@color/purple"
                android:textSize="@dimen/gender_fragment3_font_size_translit"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gender_fragment2_height"
            android:orientation="horizontal"
            android:background="@drawable/rect_white"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/treb_ms_regular"
                android:gravity="center"
                android:padding="5dp"
                android:text="pl."
                android:textColor="@color/purple"
                android:textSize="@dimen/gender_fragment3_font_size_translit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/treb_ms_regular"
                android:gravity="center"
                android:padding="5dp"
                android:text="these books"
                android:textColor="@color/purple"
                android:textSize="@dimen/gender_fragment3_font_size_translit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/treb_ms_regular"
                android:gravity="center"
                android:padding="5dp"
                android:text="эти книги"
                android:textColor="@color/purple"
                android:textSize="@dimen/gender_fragment3_font_size_translit"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gender_fragment2_height"
            android:orientation="horizontal"
            android:background="@drawable/rect_white"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/treb_ms_regular"
                android:gravity="center"
                android:padding="5dp"
                android:text="pl."
                android:textColor="@color/purple"
                android:textSize="@dimen/gender_fragment2_font_size_translit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/treb_ms_regular"
                android:gravity="center"
                android:padding="5dp"
                android:text="these women"
                android:textColor="@color/purple"
                android:textSize="@dimen/gender_fragment2_font_size_translit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/treb_ms_regular"
                android:gravity="center"
                android:padding="5dp"
                android:text="эти женщины"
                android:textColor="@color/purple"
                android:textSize="@dimen/gender_fragment2_font_size_translit"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>