<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/light_grey"
    tools:context=".RussianImWatchingTVFragment1">



    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/light_grey"
        tools:context=".RussianImWatchingTVFragment1">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_size"
            android:layout_alignParentTop="true"
            android:background="@color/medium_sea_green"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="@color/white_smoke">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="I See It Now!"
                    android:gravity="center|left"
                    android:layout_weight="1"
                    android:textSize="@dimen/toolbar_font_size"
                    android:textStyle="bold"
                    android:textColor="@color/white_smoke"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1/4"
                    android:gravity="center|left"
                    android:textSize="@dimen/toolbar_font_size"
                    android:textStyle="bold"
                    android:textColor="@color/white_smoke"
                    android:layout_marginRight="15dp"

                    />

            </LinearLayout>

        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/imwatchingtv_fragment1_padding"
            android:id="@+id/linearlayout1"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:layout_marginTop="@dimen/imwatchingtv_fragment1_top_spacing"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:padding="@dimen/imwatchingtv_fragment1_padding"
                        android:text="видеть  is an irregular verb."
                        android:textColor="@color/black"
                        android:textSize="@dimen/imwatchingtv_fragment1_font_size_intro"
                        android:textStyle="bold" />


                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/imwatchingtv_fragment1_vertical_spacing"
            android:orientation="vertical"
            android:padding="@dimen/imwatchingtv_fragment1_padding"
            app:layout_constraintTop_toBottomOf="@+id/linearlayout1"
            tools:layout_editor_absoluteX="0dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/medium_sea_green"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/imwatchingtv_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="casual"
                            android:gravity="center"
                            android:padding="@dimen/imwatchingtv_fragment1_padding"
                            android:text="видеть"
                            android:textColor="@color/white_smoke"
                            android:textSize="@dimen/imwatchingtv_fragment1_font_size_word"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/imwatchingtv_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="casual"
                            android:gravity="center"
                            android:padding="@dimen/imwatchingtv_fragment1_padding"
                            android:text="veed-yet"
                            android:textColor="@color/white_smoke"
                            android:textSize="@dimen/imwatchingtv_fragment1_font_size_translit"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/imwatchingtv_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="casual"
                            android:gravity="center"
                            android:padding="@dimen/imwatchingtv_fragment1_padding"
                            android:text="to see"
                            android:textColor="@color/white_smoke"
                            android:textSize="@dimen/imwatchingtv_fragment1_font_size_word"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/white_smoke"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/imwatchingtv_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="casual"
                            android:gravity="center"
                            android:padding="@dimen/imwatchingtv_fragment1_padding"
                            android:text="я вижу"
                            android:textColor="@color/black"
                            android:textSize="@dimen/imwatchingtv_fragment1_font_size_word"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/imwatchingtv_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="casual"
                            android:gravity="center"
                            android:padding="@dimen/imwatchingtv_fragment1_padding"
                            android:text="vee-zhoo"
                            android:textColor="@color/transliteration_color"
                            android:textSize="@dimen/imwatchingtv_fragment1_font_size_translit"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/imwatchingtv_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="casual"
                            android:gravity="center"
                            android:padding="@dimen/imwatchingtv_fragment1_padding"
                            android:text="I see"
                            android:textColor="@color/black"
                            android:textSize="@dimen/imwatchingtv_fragment1_font_size_word"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_grey"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/white_smoke"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/imwatchingtv_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="casual"
                            android:gravity="center"
                            android:padding="@dimen/imwatchingtv_fragment1_padding"
                            android:text="ты видишь"
                            android:textColor="@color/black"
                            android:textSize="@dimen/imwatchingtv_fragment1_font_size_word"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/imwatchingtv_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="casual"
                            android:gravity="center"
                            android:padding="@dimen/imwatchingtv_fragment1_padding"
                            android:text="veed-eesh"
                            android:textColor="@color/transliteration_color"
                            android:textSize="@dimen/imwatchingtv_fragment1_font_size_translit"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/imwatchingtv_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="casual"
                            android:gravity="center"
                            android:padding="@dimen/imwatchingtv_fragment1_padding"
                            android:text="you see"
                            android:textColor="@color/black"
                            android:textSize="@dimen/imwatchingtv_fragment1_font_size_word"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_grey"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/white_smoke"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/imwatchingtv_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="casual"
                            android:gravity="center"
                            android:padding="@dimen/imwatchingtv_fragment1_padding"
                            android:text="он/она видит"
                            android:textColor="@color/black"
                            android:textSize="@dimen/imwatchingtv_fragment1_font_size_word"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/imwatchingtv_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="casual"
                            android:gravity="center"
                            android:padding="@dimen/imwatchingtv_fragment1_padding"
                            android:text="veed-eet"
                            android:textColor="@color/transliteration_color"
                            android:textSize="@dimen/imwatchingtv_fragment1_font_size_translit"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/imwatchingtv_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="casual"
                            android:gravity="center"
                            android:padding="@dimen/imwatchingtv_fragment1_padding"
                            android:text="he/she sees"
                            android:textColor="@color/black"
                            android:textSize="@dimen/imwatchingtv_fragment1_font_size_word"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_grey"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/white_smoke"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/imwatchingtv_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="casual"
                            android:gravity="center"
                            android:padding="@dimen/imwatchingtv_fragment1_padding"
                            android:text="мы видим"
                            android:textColor="@color/black"
                            android:textSize="@dimen/imwatchingtv_fragment1_font_size_word"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/imwatchingtv_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="casual"
                            android:gravity="center"
                            android:padding="@dimen/imwatchingtv_fragment1_padding"
                            android:text="veed-eem"
                            android:textColor="@color/transliteration_color"
                            android:textSize="@dimen/imwatchingtv_fragment1_font_size_translit"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/imwatchingtv_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="casual"
                            android:gravity="center"
                            android:padding="@dimen/imwatchingtv_fragment1_padding"
                            android:text="we see"
                            android:textColor="@color/black"
                            android:textSize="@dimen/imwatchingtv_fragment1_font_size_word"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_grey"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/white_smoke"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/imwatchingtv_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="casual"
                            android:gravity="center"
                            android:padding="@dimen/imwatchingtv_fragment1_padding"
                            android:text="вы видите"
                            android:textColor="@color/black"
                            android:textSize="@dimen/imwatchingtv_fragment1_font_size_word"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/imwatchingtv_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="casual"
                            android:gravity="center"
                            android:padding="@dimen/imwatchingtv_fragment1_padding"
                            android:text="veed-eet-ye"
                            android:textColor="@color/transliteration_color"
                            android:textSize="@dimen/imwatchingtv_fragment1_font_size_translit"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/imwatchingtv_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="casual"
                            android:gravity="center"
                            android:padding="@dimen/imwatchingtv_fragment1_padding"
                            android:text="you(pl) see"
                            android:textColor="@color/black"
                            android:textSize="@dimen/imwatchingtv_fragment1_font_size_word"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_grey"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/white_smoke"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/imwatchingtv_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="casual"
                            android:gravity="center"
                            android:padding="@dimen/imwatchingtv_fragment1_padding"
                            android:text="они видят"
                            android:textColor="@color/black"
                            android:textSize="@dimen/imwatchingtv_fragment1_font_size_word"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/imwatchingtv_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="casual"
                            android:gravity="center"
                            android:padding="@dimen/imwatchingtv_fragment1_padding"
                            android:text="veed-yat"
                            android:textColor="@color/transliteration_color"
                            android:textSize="@dimen/imwatchingtv_fragment1_font_size_translit"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/imwatchingtv_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="casual"
                            android:gravity="center"
                            android:padding="@dimen/imwatchingtv_fragment1_padding"
                            android:text="they see"
                            android:textColor="@color/black"
                            android:textSize="@dimen/imwatchingtv_fragment1_font_size_word"
                            android:textStyle="bold" />


                    </LinearLayout>

                </LinearLayout>



            </android.support.v7.widget.CardView>


        </LinearLayout>


    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>
