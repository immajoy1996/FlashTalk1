<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/river1"
    tools:context=".RussianToLiveFragment1">


    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        tools:context=".RussianToLiveFragment1">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_size"
            android:layout_alignParentTop="true"
            android:background="@color/medium_sea_green"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="@color/white_smoke">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/back_button"
                        android:layout_width="@dimen/arrow_button_width"
                        android:layout_height="@dimen/arrow_button_height"
                        android:background="@drawable/arrow_back_pressed" />

                </LinearLayout>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="To Live"
                    android:textColor="@color/white"
                    android:textSize="@dimen/toolbar_font_size"
                    android:fontFamily="@font/treb_ms_regular"
                    android:visibility="visible"

                    />

                <LinearLayout
                    android:id="@+id/seekbar_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:visibility="gone"
                    >

                    <SeekBar
                        android:id="@+id/seekbar"
                        android:layout_width="@dimen/seekbar_length"
                        android:layout_height="match_parent"
                        android:thumbTint="@color/white"
                        android:progressDrawable="@drawable/audio_progress_bar"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:gravity="center">

                    <com.example.immanuel.flashtalk.CircularImageView2
                        android:id="@+id/audio"
                        android:layout_width="@dimen/circular_button_volume_width"
                        android:layout_height="@dimen/circular_button_volume_height"
                        android:src="@drawable/volumetrans2"
                        android:visibility="visible"
                        />

                    <com.example.immanuel.flashtalk.CircularImageView2
                        android:id="@+id/pause"
                        android:layout_width="@dimen/circular_button_volume_width"
                        android:layout_height="@dimen/circular_button_volume_height"
                        android:src="@drawable/pause_icon1"
                        android:visibility="gone"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/forward_button"
                        android:layout_width="@dimen/arrow_button_width"
                        android:layout_height="@dimen/arrow_button_height"
                        android:background="@drawable/arrow_forward_pressed" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/linearlayout1"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:layout_marginTop="@dimen/idontunderstand_top_spacing"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/intro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/treb_ms_regular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="жить is an irregular verb."
                        android:textColor="@color/black"
                        android:textSize="@dimen/ican_fragment1_font_size_intro" />


                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ican_fragment1_vertical_spacing"
            android:orientation="vertical"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@+id/linearlayout1"
            tools:layout_editor_absoluteX="0dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:id="@+id/headerLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/rect_medium_sea_green"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/tothink_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:padding="@dimen/ican_fragment1_padding_boxes"
                            android:text="жить"
                            android:textColor="@color/white"
                            android:textSize="@dimen/ican_fragment1_font_size_word"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/tothink_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:padding="@dimen/ican_fragment1_padding_boxes"
                            android:text="zheet"
                            android:textColor="@color/white"
                            android:textSize="@dimen/ican_fragment1_font_size_translit"
                            android:textStyle="italic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/tothink_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:padding="@dimen/ican_fragment1_padding_boxes"
                            android:text="to live"
                            android:textColor="@color/white"
                            android:textSize="@dimen/ican_fragment1_font_size_word" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/rect_white_smoke"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/tothink_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:padding="@dimen/ican_fragment1_padding_boxes"
                            android:text="я живу"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ican_fragment1_font_size_word"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/tothink_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:padding="@dimen/ican_fragment1_padding_boxes"
                            android:text="zheev-oo"
                            android:textColor="@color/transliteration_color"
                            android:textSize="@dimen/ican_fragment1_font_size_translit"
                            android:textStyle="italic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/tothink_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:padding="@dimen/ican_fragment1_padding_boxes"
                            android:text="I live"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ican_fragment1_font_size_word" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/rect_white_smoke"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/tothink_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:padding="@dimen/ican_fragment1_padding_boxes"
                            android:text="ты живёшь"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ican_fragment1_font_size_word"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/tothink_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:padding="@dimen/ican_fragment1_padding_boxes"
                            android:text="zheev-yosh"
                            android:textColor="@color/transliteration_color"
                            android:textSize="@dimen/ican_fragment1_font_size_translit"
                            android:textStyle="italic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/tothink_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:padding="@dimen/ican_fragment1_padding_boxes"
                            android:text="you live"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ican_fragment1_font_size_word" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/rect_white_smoke"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/tothink_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:padding="@dimen/ican_fragment1_padding_boxes"
                            android:text="он/она живёт"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ican_fragment1_font_size_word"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/tothink_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:padding="@dimen/ican_fragment1_padding_boxes"
                            android:text="zheev-yot"
                            android:textColor="@color/transliteration_color"
                            android:textSize="@dimen/ican_fragment1_font_size_translit"
                            android:textStyle="italic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/tothink_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="he/she lives"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ican_fragment1_font_size_word" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/rect_white_smoke"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/tothink_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:padding="@dimen/ican_fragment1_padding_boxes"
                            android:text="мы живём"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ican_fragment1_font_size_word"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/tothink_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:padding="@dimen/ican_fragment1_padding_boxes"
                            android:text="zheev-yom"
                            android:textColor="@color/transliteration_color"
                            android:textSize="@dimen/ican_fragment1_font_size_translit"
                            android:textStyle="italic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/tothink_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:padding="@dimen/ican_fragment1_padding_boxes"
                            android:text="we live"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ican_fragment1_font_size_word" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout5"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/rect_white_smoke"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/tothink_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:padding="@dimen/ican_fragment1_padding_boxes"
                            android:text="вы живёте"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ican_fragment1_font_size_word"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/tothink_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:padding="@dimen/ican_fragment1_padding_boxes"
                            android:text="zheev-yot-ye"
                            android:textColor="@color/transliteration_color"
                            android:textSize="@dimen/ican_fragment1_font_size_translit"
                            android:textStyle="italic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/tothink_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:padding="@dimen/ican_fragment1_padding_boxes"
                            android:text="you(pl) live"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ican_fragment1_font_size_word" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout6"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/rect_white_smoke"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/tothink_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:padding="@dimen/ican_fragment1_padding_boxes"
                            android:text="они живут"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ican_fragment1_font_size_word"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/tothink_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:padding="@dimen/ican_fragment1_padding_boxes"
                            android:text="zheev-yoot"
                            android:textColor="@color/transliteration_color"
                            android:textSize="@dimen/ican_fragment1_font_size_translit"
                            android:textStyle="italic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/tothink_fragment1_height"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:padding="@dimen/ican_fragment1_padding_boxes"
                            android:text="they live"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ican_fragment1_font_size_word" />


                    </LinearLayout>

                </LinearLayout>


        </LinearLayout>


    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>
