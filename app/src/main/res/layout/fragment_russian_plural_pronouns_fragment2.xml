<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/river1"
    tools:context=".RussianPluralPronounsFragment2">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_fragment2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_size"
        android:layout_alignParentTop="true"
        android:background="@color/medium_sea_green"
        app:titleTextColor="@color/white_smoke" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/back_button"
                        android:layout_width="@dimen/arrow_button_width"
                        android:layout_height="@dimen/arrow_button_height"
                        android:background="@drawable/arrow_back_pressed" />

                </LinearLayout>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="Examples"
                    android:textColor="@color/white"
                    android:textSize="@dimen/toolbar_font_size"
                    android:fontFamily="@font/treb_ms_regular"

                    />

                <LinearLayout
                    android:id="@+id/seekbar_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:visibility="gone"
                    >

                    <SeekBar
                        android:id="@+id/seekbar"
                        android:layout_width="@dimen/seekbar_length"
                        android:layout_height="match_parent"
                        android:thumbTint="@color/white"
                        android:progressDrawable="@drawable/audio_progress_bar"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <com.example.immanuel.flashtalk.CircularImageView2
                        android:id="@+id/audio"
                        android:layout_width="@dimen/circular_button_volume_width"
                        android:layout_height="@dimen/circular_button_volume_height"
                        android:src="@drawable/volumetrans2"
                        android:visibility="gone"
                        />

                    <com.example.immanuel.flashtalk.CircularImageView2
                        android:id="@+id/pause"
                        android:layout_width="@dimen/circular_button_volume_width"
                        android:layout_height="@dimen/circular_button_volume_height"
                        android:src="@drawable/pause_icon1"
                        android:visibility="gone"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/forward_button"
                        android:layout_width="@dimen/arrow_button_width"
                        android:layout_height="@dimen/arrow_button_height"
                        android:background="@drawable/arrow_forward_pressed" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/treb_ms_regular"
        android:gravity="center"
        android:padding="5dp"
        android:background="@color/white"
        android:text="Everyday conversations!"
        android:textColor="@color/black"
        android:textSize="@dimen/plural_pronouns2_font_size_intro"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout1"
                android:layout_marginTop="@dimen/plural_pronouns2_vertical_spacing"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:background="@drawable/custom_ripple"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/plural_pronouns2_height"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/treb_ms_regular"
                    android:gravity="center|left"
                    android:text="Где ты, сейчас?"
                    android:textColor="@color/black"
                    android:textSize="@dimen/plural_pronouns2_font_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_grey"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/plural_pronouns2_height"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/treb_ms_regular"
                    android:gravity="center|left"
                    android:text="Where are you now?"
                    android:textColor="@color/transliteration_color"
                    android:textSize="@dimen/plural_pronouns2_font_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout2"
                android:layout_marginTop="@dimen/plural_pronouns2_vertical_spacing"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:background="@drawable/custom_ripple"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/plural_pronouns2_height"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/treb_ms_regular"
                    android:gravity="center|left"
                    android:text="Я здесь. А ты? Там?  "
                    android:textColor="@color/black"
                    android:textSize="@dimen/plural_pronouns2_font_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_grey"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/plural_pronouns2_height"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/treb_ms_regular"
                    android:gravity="center|left"
                    android:text="I'm here. And you? There?"
                    android:textColor="@color/transliteration_color"
                    android:textSize="@dimen/plural_pronouns2_font_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout3"
                android:layout_marginTop="@dimen/plural_pronouns2_vertical_spacing"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:background="@drawable/custom_ripple"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/plural_pronouns2_height"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/treb_ms_regular"
                    android:gravity="center|left"
                    android:text="Да. Что ты делаешь сейчас?"
                    android:textColor="@color/black"
                    android:textSize="@dimen/plural_pronouns2_font_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_grey"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/plural_pronouns2_height"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/treb_ms_regular"
                    android:gravity="center|left"
                    android:text="Yes. What are you doing now right now?"
                    android:textColor="@color/transliteration_color"
                    android:textSize="@dimen/plural_pronouns2_font_size" />

            </LinearLayout>

        </LinearLayout>



</LinearLayout>
