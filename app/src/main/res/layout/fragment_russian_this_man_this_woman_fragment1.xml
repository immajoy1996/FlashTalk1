<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/river1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.languageapp.immanuel.flashtalk.RussianThisManThisWomanFragment1">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_size"
        android:layout_alignParentTop="true"
        android:background="@color/medium_sea_green"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/white_smoke">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_width="@dimen/arrow_button_width"
                    android:layout_height="@dimen/arrow_button_height"
                    android:background="@drawable/arrow_back_pressed" />

            </LinearLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="This Man, This Woman"
                android:textColor="@color/white"
                android:textSize="@dimen/toolbar_font_size"
                android:fontFamily="@font/treb_ms_regular"
                android:visibility="visible"

                />

            <LinearLayout
                android:id="@+id/seekbar_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone"
                >

                <SeekBar
                    android:id="@+id/seekbar"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:thumbTint="@color/white"
                    android:progressDrawable="@drawable/audio_progress_bar"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <com.languageapp.immanuel.flashtalk.CircularImageView2
                    android:id="@+id/audio"
                    android:layout_width="@dimen/circular_button_volume_width"
                    android:layout_height="@dimen/circular_button_volume_height"
                    android:src="@drawable/volumetrans2"
                    android:visibility="gone"
                    />

                <com.languageapp.immanuel.flashtalk.CircularImageView2
                    android:id="@+id/pause"
                    android:layout_width="@dimen/circular_button_volume_width"
                    android:layout_height="@dimen/circular_button_volume_height"
                    android:src="@drawable/pause_icon1"
                    android:visibility="gone"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/forward_button"
                    android:layout_width="@dimen/arrow_button_width"
                    android:layout_height="@dimen/arrow_button_height"
                    android:background="@drawable/arrow_forward_pressed" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fontFamily="@font/treb_ms_regular"
        android:gravity="center"
        android:padding="5dp"
        android:text='To say "this", use either этот (etot), эта (eta) or это (eta). Which one you use depends on the gender of the noun. Get the pattern?'
        android:textColor="@color/black"
        android:textSize="@dimen/gender_fragment2_font_size_translit"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        android:gravity="center"

        >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gender_fragment2_height"
            android:orientation="horizontal"
            android:background="@drawable/rect_white"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/treb_ms_regular"
                android:gravity="center"
                android:padding="5dp"
                android:text="masc."
                android:textColor="@color/transliteration_color"
                android:textSize="@dimen/gender_fragment3_font_size_translit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/treb_ms_regular"
                android:gravity="center"
                android:padding="5dp"
                android:text="this man"
                android:textColor="@color/transliteration_color"
                android:textSize="@dimen/gender_fragment3_font_size_translit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/treb_ms_regular"
                android:gravity="center"
                android:padding="5dp"
                android:text="этот мужчина"
                android:textColor="@color/transliteration_color"
                android:textSize="@dimen/gender_fragment3_font_size_translit"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gender_fragment2_height"
            android:orientation="horizontal"
            android:background="@drawable/rect_white"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/treb_ms_regular"
                android:gravity="center"
                android:padding="5dp"
                android:text="fem."
                android:textColor="@color/red"
                android:textSize="@dimen/gender_fragment3_font_size_translit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/treb_ms_regular"
                android:gravity="center"
                android:padding="5dp"
                android:text="this car"
                android:textColor="@color/red"
                android:textSize="@dimen/gender_fragment3_font_size_translit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/treb_ms_regular"
                android:gravity="center"
                android:padding="5dp"
                android:text="эта машина"
                android:textColor="@color/red"
                android:textSize="@dimen/gender_fragment3_font_size_translit"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gender_fragment2_height"
            android:orientation="horizontal"
            android:background="@drawable/rect_white"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/treb_ms_regular"
                android:gravity="center"
                android:padding="5dp"
                android:text="neut."
                android:textColor="@color/medium_sea_green"
                android:textSize="@dimen/gender_fragment2_font_size_translit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/treb_ms_regular"
                android:gravity="center"
                android:padding="5dp"
                android:text="this photo"
                android:textColor="@color/medium_sea_green"
                android:textSize="@dimen/gender_fragment2_font_size_translit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/treb_ms_regular"
                android:gravity="center"
                android:padding="5dp"
                android:text="это фото"
                android:textColor="@color/medium_sea_green"
                android:textSize="@dimen/gender_fragment2_font_size_translit"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gender_fragment2_height"
            android:orientation="horizontal"
            android:background="@drawable/rect_white"
            android:layout_marginTop="@dimen/gender_fragment2_vertical_spacing"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/treb_ms_regular"
                android:gravity="center"
                android:padding="5dp"
                android:text="masc."
                android:textColor="@color/transliteration_color"
                android:textSize="@dimen/gender_fragment2_font_size_translit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/treb_ms_regular"
                android:gravity="center"
                android:padding="5dp"
                android:text="this house"
                android:textColor="@color/transliteration_color"
                android:textSize="@dimen/gender_fragment2_font_size_translit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/treb_ms_regular"
                android:gravity="center"
                android:padding="5dp"
                android:text="этот дом"
                android:textColor="@color/transliteration_color"
                android:textSize="@dimen/gender_fragment2_font_size_translit"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gender_fragment2_height"
            android:orientation="horizontal"
            android:background="@drawable/rect_white"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/treb_ms_regular"
                android:gravity="center"
                android:padding="5dp"
                android:text="fem."
                android:textColor="@color/red"
                android:textSize="@dimen/gender_fragment2_font_size_translit" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/treb_ms_regular"
                android:gravity="center"
                android:padding="5dp"
                android:text="this woman"
                android:textColor="@color/red"
                android:textSize="@dimen/gender_fragment2_font_size_translit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/treb_ms_regular"
                android:gravity="center"
                android:padding="5dp"
                android:text="эта женщина"
                android:textColor="@color/red"
                android:textSize="@dimen/gender_fragment2_font_size_translit"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gender_fragment2_height"
            android:orientation="horizontal"
            android:background="@drawable/rect_white"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/treb_ms_regular"
                android:gravity="center"
                android:padding="5dp"
                android:text="neut."
                android:textColor="@color/medium_sea_green"
                android:textSize="@dimen/gender_fragment2_font_size_translit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/treb_ms_regular"
                android:gravity="center"
                android:padding="5dp"
                android:text="this building"
                android:textColor="@color/medium_sea_green"
                android:textSize="@dimen/gender_fragment2_font_size_translit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/treb_ms_regular"
                android:gravity="center"
                android:padding="5dp"
                android:text="это здание"
                android:textColor="@color/medium_sea_green"
                android:textSize="@dimen/gender_fragment2_font_size_translit"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>