<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_smoke"
    tools:context=".RussianForMeForYouFragment2">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_size"
        android:layout_alignParentTop="true"
        android:background="@color/medium_sea_green"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/white_smoke">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_width="@dimen/arrow_button_width"
                    android:layout_height="@dimen/arrow_button_height"
                    android:background="@drawable/arrow_back_pressed" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="center|left"
                android:text="It's For Him"
                android:textColor="@color/white_smoke"
                android:textSize="@dimen/toolbar_font_size"
                android:textStyle="bold"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center">

                <com.example.immanuel.flashtalk.CircularImageView2
                    android:id="@+id/audio"
                    android:layout_width="@dimen/circular_button_volume_width"
                    android:layout_height="@dimen/circular_button_volume_height"
                    android:src="@drawable/volumetrans2"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <com.example.immanuel.flashtalk.CircularImageView2
                    android:id="@+id/games"
                    android:layout_width="@dimen/circular_button_games_width"
                    android:layout_height="@dimen/circular_button_games_height"
                    android:src="@drawable/chess1"
                    />

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        android:gravity="center"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/ihave_fragment1_padding"
                >

                <TextView
                    android:id="@+id/intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="Remember that его, её, and их become него, неё, and них after a preposition."
                    android:textColor="@color/black"
                    android:textSize="@dimen/ihave_fragment1_font_size_intro"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/example1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ihave_fragment1_vertical_spacing"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="Это плохо для него."
                    android:textColor="@color/black"
                    android:textSize="@dimen/ihave_fragment1_font_size_intro"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/explanation1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="It's bad for him."
                    android:textColor="@color/transliteration_color"
                    android:textSize="@dimen/ihave_fragment1_font_size_intro"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/example2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ihave_fragment1_vertical_spacing"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="Эти цветы для неё."
                    android:textColor="@color/black"
                    android:textSize="@dimen/ihave_fragment1_font_size_intro"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/explanation2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="These flowers are for her."
                    android:textColor="@color/transliteration_color"
                    android:textSize="@dimen/ihave_fragment1_font_size_intro"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/example3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ihave_fragment1_vertical_spacing"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="Эти книги для них."
                    android:textColor="@color/black"
                    android:textSize="@dimen/ihave_fragment1_font_size_intro"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/explanation3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="These books are for them."
                    android:textColor="@color/transliteration_color"
                    android:textSize="@dimen/ihave_fragment1_font_size_intro"
                    android:textStyle="italic" />

            </LinearLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>