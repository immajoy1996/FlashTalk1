<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/river1"
    tools:context="com.languageapp.immanuel.flashtalk.RussianVocabSplash">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_fragment1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_size"
        android:layout_alignParentTop="true"
        android:background="@color/medium_sea_green"
        app:titleTextColor="@color/white_smoke">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="FlashTalk"
            android:textColor="@color/white"
            android:fontFamily="@font/treb_ms_regular"
            android:textSize="@dimen/toolbar_font_size" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >

        <com.languageapp.immanuel.flashtalk.CircularImageViewTest
            android:id="@+id/image"
            android:layout_width="@dimen/vocab_splash_circular_image_width"
            android:layout_height="@dimen/vocab_splash_circular_image_height"
            android:src="@drawable/book3"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dialogues"
            android:padding="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:fontFamily="@font/treb_ms_regular"
            android:textColor="@color/white"
            android:textSize="@dimen/vocab_splash_font_size"
            />

    </LinearLayout>



</LinearLayout>