<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/river1"
    tools:context=".RussianAccentsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_size"
        android:layout_alignParentTop="true"
        android:background="@color/medium_sea_green"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/white_smoke">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_width="@dimen/arrow_button_width"
                    android:layout_height="@dimen/arrow_button_height"
                    android:background="@drawable/arrow_back_pressed" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="@integer/plurals_fragment2_title_weight"
                android:fontFamily="@font/treb_ms_regular"
                android:gravity="center|left"
                android:text="Accents"
                android:textColor="@color/white"
                android:textSize="@dimen/toolbar_font_size"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="@integer/plurals_fragment2_volume_weight"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:gravity="center">

                <com.example.immanuel.flashtalk.CircularImageView2
                    android:id="@+id/audio"
                    android:layout_width="@dimen/circular_button_volume_width"
                    android:layout_height="@dimen/circular_button_volume_height"
                    android:src="@drawable/volumetrans2"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="@integer/plurals_fragment2_games_weight"
                android:gravity="center">

                <com.example.immanuel.flashtalk.CircularImageViewTest
                    android:id="@+id/games"
                    android:layout_width="@dimen/circular_button_games_width"
                    android:layout_height="@dimen/circular_button_games_height"
                    android:src="@drawable/chess1"
                    />

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_white"
            android:orientation="vertical"
            android:padding="@dimen/plurals_fragment1_padding">

            <TextView
                android:id="@+id/intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fontFamily="@font/treb_ms_regular"
                android:gravity="center"
                android:text="An unstressed о in Russian is pronounced like an а. A stressed о is pronounced like the normal о. Usually, accents aren't written in Russian but we've included them in the beginning lessons so you get the hang of pronounciation."
                android:textColor="@color/black"
                android:textSize="@dimen/plural_pronouns_font_size_intro" />

        </LinearLayout>

        <TextView
            android:id="@+id/example1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gender_fragment2_height"
            android:layout_marginTop="@dimen/plurals_fragment1_vertical_spacing"
            android:background="@drawable/rect_white"
            android:fontFamily="@font/treb_ms_regular"
            android:gravity="center"
            android:text="мотор"
            android:textColor="@color/black"
            android:textSize="@dimen/ihave_fragment1_font_size_intro"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/example2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gender_fragment2_height"
            android:background="@drawable/rect_white"
            android:fontFamily="@font/treb_ms_regular"
            android:gravity="center"
            android:text="порт"
            android:textColor="@color/black"
            android:textSize="@dimen/ihave_fragment1_font_size_intro"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/example3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gender_fragment2_height"
            android:background="@drawable/rect_white"
            android:fontFamily="@font/treb_ms_regular"
            android:gravity="center"
            android:text="спорт"
            android:textColor="@color/black"
            android:textSize="@dimen/ihave_fragment1_font_size_intro"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>