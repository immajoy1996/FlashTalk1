<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/river1"
    tools:context=".RussianToThinkFragment1">



    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        tools:context=".RussianToThinkFragment1">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_size"
            android:layout_alignParentTop="true"
            android:background="@color/medium_sea_green"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="@color/white_smoke">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/back_button"
                        android:layout_width="@dimen/arrow_button_width"
                        android:layout_height="@dimen/arrow_button_height"
                        android:background="@drawable/arrow_back_pressed" />

                </LinearLayout>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/treb_ms_regular"
                    android:gravity="center|left"
                    android:text="To Think"
                    android:textColor="@color/white"
                    android:textSize="@dimen/toolbar_font_size"
                    android:visibility="visible"

                    />

                <LinearLayout
                    android:id="@+id/seekbar_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:visibility="gone"
                    >

                    <SeekBar
                        android:id="@+id/seekbar"
                        android:layout_width="@dimen/seekbar_length"
                        android:layout_height="match_parent"
                        android:thumbTint="@color/white"
                        android:progressDrawable="@drawable/audio_progress_bar"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:gravity="center">

                    <com.example.immanuel.flashtalk.CircularImageView2
                        android:id="@+id/audio"
                        android:layout_width="@dimen/circular_button_volume_width"
                        android:layout_height="@dimen/circular_button_volume_height"
                        android:src="@drawable/volumetrans2"
                        android:visibility="visible"
                        />

                    <com.example.immanuel.flashtalk.CircularImageView2
                        android:id="@+id/pause"
                        android:layout_width="@dimen/circular_button_volume_width"
                        android:layout_height="@dimen/circular_button_volume_height"
                        android:src="@drawable/pause_icon1"
                        android:visibility="gone"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/forward_button"
                        android:layout_width="@dimen/arrow_button_width"
                        android:layout_height="@dimen/arrow_button_height"
                        android:background="@drawable/arrow_forward_pressed" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/linearlayout1"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:layout_marginTop="@dimen/idontunderstand_top_spacing"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/intro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:fontFamily="@font/treb_ms_regular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="If you want to express an opinion, use this one. It's regular!"
                        android:textColor="@color/black"
                        android:textSize="@dimen/idontunderstand_font_size_intro" />


                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/basic_verbs_vertical_spacing"
            android:orientation="vertical"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@+id/linearlayout1"
            tools:layout_editor_absoluteX="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/headerLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/rect_medium_sea_green"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/tothink_fragment1_height"
                        android:layout_weight="1"
                        android:fontFamily="@font/treb_ms_regular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="думать"
                        android:textColor="@color/white"
                        android:textSize="@dimen/idontunderstand_font_size_word"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/tothink_fragment1_height"
                        android:layout_weight="1"
                        android:fontFamily="@font/treb_ms_regular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="doo-mat"
                        android:textColor="@color/white"
                        android:textSize="@dimen/idontunderstand_font_size_translit"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/tothink_fragment1_height"
                        android:layout_weight="1"
                        android:fontFamily="@font/treb_ms_regular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="to think"
                        android:textColor="@color/white"
                        android:textSize="@dimen/idontunderstand_font_size_word" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/rect_white_smoke"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/tothink_fragment1_height"
                        android:layout_weight="1"
                        android:fontFamily="@font/treb_ms_regular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="я думаю"
                        android:textColor="@color/black"
                        android:textSize="@dimen/idontunderstand_font_size_word"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/tothink_fragment1_height"
                        android:layout_weight="1"
                        android:fontFamily="@font/treb_ms_regular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="doo-ma-yu"
                        android:textColor="@color/transliteration_color"
                        android:textSize="@dimen/idontunderstand_font_size_translit"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/tothink_fragment1_height"
                        android:layout_weight="1"
                        android:fontFamily="@font/treb_ms_regular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="I think"
                        android:textColor="@color/black"
                        android:textSize="@dimen/idontunderstand_font_size_word" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/rect_white_smoke"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/tothink_fragment1_height"
                        android:layout_weight="1"
                        android:fontFamily="@font/treb_ms_regular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="ты думаешь"
                        android:textColor="@color/black"
                        android:textSize="@dimen/idontunderstand_font_size_word"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/tothink_fragment1_height"
                        android:layout_weight="1"
                        android:fontFamily="@font/treb_ms_regular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="doo-ma-yesh"
                        android:textColor="@color/transliteration_color"
                        android:textSize="@dimen/idontunderstand_font_size_translit"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/tothink_fragment1_height"
                        android:layout_weight="1"
                        android:fontFamily="@font/treb_ms_regular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="you think"
                        android:textColor="@color/black"
                        android:textSize="@dimen/idontunderstand_font_size_word" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/rect_white_smoke"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/tothink_fragment1_height"
                        android:layout_weight="1"
                        android:fontFamily="@font/treb_ms_regular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="он/она думает"
                        android:textColor="@color/black"
                        android:textSize="@dimen/idontunderstand_font_size_word"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/tothink_fragment1_height"
                        android:layout_weight="1"
                        android:fontFamily="@font/treb_ms_regular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="doo-ma-yet"
                        android:textColor="@color/transliteration_color"
                        android:textSize="@dimen/idontunderstand_font_size_translit"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/tothink_fragment1_height"
                        android:layout_weight="1"
                        android:fontFamily="@font/treb_ms_regular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="he/she thinks"
                        android:textColor="@color/black"
                        android:textSize="@dimen/idontunderstand_font_size_word" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/rect_white_smoke"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/tothink_fragment1_height"
                        android:layout_weight="1"
                        android:fontFamily="@font/treb_ms_regular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="мы думаем"
                        android:textColor="@color/black"
                        android:textSize="@dimen/idontunderstand_font_size_word"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/tothink_fragment1_height"
                        android:layout_weight="1"
                        android:fontFamily="@font/treb_ms_regular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="doo-ma-yem"
                        android:textColor="@color/transliteration_color"
                        android:textSize="@dimen/idontunderstand_font_size_translit"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/tothink_fragment1_height"
                        android:layout_weight="1"
                        android:fontFamily="@font/treb_ms_regular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="we think"
                        android:textColor="@color/black"
                        android:textSize="@dimen/idontunderstand_font_size_word" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/rect_white_smoke"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/tothink_fragment1_height"
                        android:layout_weight="1"
                        android:fontFamily="@font/treb_ms_regular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="вы думаете"
                        android:textColor="@color/black"
                        android:textSize="@dimen/idontunderstand_font_size_word"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/tothink_fragment1_height"
                        android:layout_weight="1"
                        android:fontFamily="@font/treb_ms_regular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="doo-ma-yet-ye"
                        android:textColor="@color/transliteration_color"
                        android:textSize="@dimen/idontunderstand_font_size_translit"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/tothink_fragment1_height"
                        android:layout_weight="1"
                        android:fontFamily="@font/treb_ms_regular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="you(pl) think"
                        android:textColor="@color/black"
                        android:textSize="@dimen/idontunderstand_font_size_word" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/rect_white_smoke"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/tothink_fragment1_height"
                        android:layout_weight="1"
                        android:fontFamily="@font/treb_ms_regular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="они думают"
                        android:textColor="@color/black"
                        android:textSize="@dimen/idontunderstand_font_size_word"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/tothink_fragment1_height"
                        android:layout_weight="1"
                        android:fontFamily="@font/treb_ms_regular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="doo-ma-yut"
                        android:textColor="@color/transliteration_color"
                        android:textSize="@dimen/idontunderstand_font_size_translit"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/tothink_fragment1_height"
                        android:layout_weight="1"
                        android:fontFamily="@font/treb_ms_regular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="they think"
                        android:textColor="@color/black"
                        android:textSize="@dimen/idontunderstand_font_size_word" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>
