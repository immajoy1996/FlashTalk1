<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_smoke"
    tools:context=".RussianAccusativeCaseFragment1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_size"
        android:layout_alignParentTop="true"
        android:background="@color/medium_sea_green"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/white_smoke">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_width="@dimen/arrow_button_width"
                    android:layout_height="@dimen/arrow_button_height"
                    android:background="@drawable/arrow_back_pressed" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="@integer/accusativecase_fragment1_title_weight"
                android:gravity="center|left"
                android:text="A Little Grammar"
                android:textColor="@color/white_smoke"
                android:textSize="@dimen/toolbar_font_size"
                android:textStyle="bold"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/forward_button"
                    android:layout_width="@dimen/arrow_button_width"
                    android:layout_height="@dimen/arrow_button_height"
                    android:background="@drawable/arrow_forward_pressed" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        android:gravity="center"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rect_white"
                android:padding="5dp"
                >

                <TextView
                    android:id="@+id/intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The direct object of a verb is what receives the action from the verb."
                    android:gravity="center"
                    android:fontFamily="casual"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/accusativecase_fragment1_font_size_intro"
                    />

                <TextView
                    android:id="@+id/example1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="eg. I want a car for Christmas."
                    android:gravity="center"
                    android:fontFamily="casual"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/accusativecase_fragment1_vertical_spacing"
                    android:textSize="@dimen/accusativecase_fragment1_font_size_intro"
                    />

                <TextView
                    android:id="@+id/explanation1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="'a car' is the direct object of want."
                    android:textColor="@color/transliteration_color"
                    android:textSize="@dimen/accusativecase_fragment1_font_size_intro"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/example2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="eg. I don't understand you."
                    android:gravity="center"
                    android:fontFamily="casual"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/accusativecase_fragment1_vertical_spacing"
                    android:textSize="@dimen/accusativecase_fragment1_font_size_intro"
                    />

                <TextView
                    android:id="@+id/explanation2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="'you' is the direct object of understand."
                    android:textColor="@color/transliteration_color"
                    android:textSize="@dimen/accusativecase_fragment1_font_size_intro"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/example3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="eg. I see him right now."
                    android:gravity="center"
                    android:fontFamily="casual"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/accusativecase_fragment1_vertical_spacing"
                    android:textSize="@dimen/accusativecase_fragment1_font_size_intro"
                    />

                <TextView
                    android:id="@+id/explanation3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="'him' is the direct object of see"
                    android:textColor="@color/transliteration_color"
                    android:textSize="@dimen/accusativecase_fragment1_font_size_intro"
                    android:textStyle="italic" />

            </LinearLayout>

    </LinearLayout>

</LinearLayout>