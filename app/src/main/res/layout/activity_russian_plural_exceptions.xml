<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/river1"
    tools:context="com.languageapp.immanuel.flashtalk.RussianPluralsFragment1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_size"
        android:layout_alignParentTop="true"
        android:background="@color/medium_sea_green"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/white_smoke">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_width="@dimen/arrow_button_width"
                    android:layout_height="@dimen/arrow_button_height"
                    android:background="@drawable/arrow_back_pressed" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="@integer/exceptions_title_weight"
                android:gravity="center|left"
                android:text="Exceptions"
                android:textColor="@color/white"
                android:textSize="@dimen/toolbar_font_size"
                android:fontFamily="@font/treb_ms_regular"

                />

            <LinearLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_weight="@integer/exceptions_volume_weight"
                android:layout_height="match_parent"
                android:gravity="center">

                <com.languageapp.immanuel.flashtalk.CircularImageViewTest
                    android:id="@+id/audio"
                    android:layout_width="@dimen/circular_button_volume_width"
                    android:layout_height="@dimen/circular_button_volume_height"
                    android:src="@drawable/volumetrans2"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="@integer/exceptions_games_weight"
                android:gravity="center">

                <com.languageapp.immanuel.flashtalk.CircularImageViewTest
                    android:id="@+id/games"
                    android:layout_width="@dimen/circular_button_games_width"
                    android:layout_height="@dimen/circular_button_games_height"
                    android:src="@drawable/chess1"
                    />

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/white"
        android:fontFamily="@font/treb_ms_regular"
        android:gravity="center"
        android:text="There are some important exceptions to the plural rule. These are worth knowing."
        android:textColor="@color/black"
        android:textSize="@dimen/exceptions_font_size_intro"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        android:gravity="center"
        >

            <TextView
                android:id="@+id/example1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/gender_fragment2_height"
                android:background="@drawable/rect_white"
                android:fontFamily="@font/treb_ms_regular"
                android:gravity="center"
                android:text="друг - друзья (drooz-ya)"
                android:textColor="@color/black"
                android:textSize="@dimen/ihave_fragment1_font_size_intro" />

            <TextView
                android:id="@+id/example2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/gender_fragment2_height"
                android:background="@drawable/rect_white"
                android:fontFamily="@font/treb_ms_regular"
                android:gravity="center"
                android:text="человек - люди (lyu-dee)"
                android:textColor="@color/black"
                android:textSize="@dimen/ihave_fragment1_font_size_intro" />


            <TextView
                android:id="@+id/example3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/gender_fragment2_height"
                android:background="@drawable/rect_white"
                android:fontFamily="@font/treb_ms_regular"
                android:gravity="center"
                android:text="день - дней (dn-yey)"
                android:textColor="@color/black"
                android:textSize="@dimen/ihave_fragment1_font_size_intro" />


    </LinearLayout>

</LinearLayout>