<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".RussianToThinkFragment3">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_fragment2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_size"
        android:layout_alignParentTop="true"
        android:background="@color/medium_sea_green"
        app:titleTextColor="@color/white_smoke">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="Они любят"
                android:textColor="@color/white_smoke"
                android:textSize="@dimen/toolbar_font_size"
                android:textStyle="bold"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:gravity="center|left"
                android:text="3/3"
                android:textColor="@color/white_smoke"
                android:textSize="@dimen/toolbar_font_size"
                android:textStyle="bold"

                />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:gravity="center"
        android:padding="@dimen/imwatchingtv_fragment3_padding"
        android:text='"To like" is an essential verb is any language.'
        android:textColor="@color/black"
        android:textSize="@dimen/ican_fragment3_font_size_intro"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/medium_sea_green"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout1"
                android:layout_marginTop="@dimen/ican_fragment3_vertical_spacing"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:background="@drawable/rect"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ican_fragment3_height"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="casual"
                    android:gravity="center|left"
                    android:text="Они могут говорить по-русски. "
                    android:textColor="@color/black"
                    android:textSize="@dimen/ican_fragment3_font_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_grey"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ican_fragment3_height"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="casual"
                    android:gravity="center|left"
                    android:text="They can speak Russian."
                    android:textColor="@color/transliteration_color"
                    android:textSize="@dimen/ican_fragment3_font_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout2"
                android:layout_marginTop="@dimen/ican_fragment3_vertical_spacing"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:background="@drawable/rect"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ican_fragment3_height"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="casual"
                    android:gravity="center|left"
                    android:text="Мы можем делать это?"
                    android:textColor="@color/black"
                    android:textSize="@dimen/ican_fragment3_font_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_grey"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ican_fragment3_height"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="casual"
                    android:gravity="center|left"
                    android:text="Can we do this?"
                    android:textColor="@color/transliteration_color"
                    android:textSize="@dimen/ican_fragment3_font_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout3"
                android:layout_marginTop="@dimen/ican_fragment3_vertical_spacing"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:background="@drawable/rect"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ican_fragment3_height"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="casual"
                    android:gravity="center|left"
                    android:text="Вы можете говорить там?"
                    android:textColor="@color/black"
                    android:textSize="@dimen/ican_fragment3_font_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_grey"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ican_fragment3_height"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="casual"
                    android:gravity="center|left"
                    android:text="Can you guys talk there?"
                    android:textColor="@color/transliteration_color"
                    android:textSize="@dimen/ican_fragment3_font_size"
                    android:textStyle="bold" />

            </LinearLayout>



        </LinearLayout>



    </android.support.v7.widget.CardView>


</LinearLayout>