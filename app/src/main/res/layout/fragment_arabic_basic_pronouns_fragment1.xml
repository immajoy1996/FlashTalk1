<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/river1"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.languageapp.immanuel.flashtalk.ArabicBasicPronounsFragment1"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="com.languageapp.immanuel.flashtalk.ArabicBasicPronounsFragment1">

        <!-- TODO: Update blank fragment layout -->

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_fragment1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_size"
            android:layout_alignParentTop="true"
            android:background="@color/medium_sea_green"
            app:titleTextColor="@color/white_smoke">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/back_button"
                        android:layout_width="@dimen/arrow_button_width"
                        android:layout_height="@dimen/arrow_button_height"
                        android:background="@drawable/arrow_back_pressed" />

                </LinearLayout>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="I, You"
                    android:textColor="@color/white"
                    android:textSize="@dimen/toolbar_font_size"
                    android:fontFamily="@font/treb_ms_regular"
                    android:visibility="visible"

                    />

                <LinearLayout
                    android:id="@+id/seekbar_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:visibility="gone"
                    >

                    <SeekBar
                        android:id="@+id/seekbar"
                        android:layout_width="@dimen/seekbar_length"
                        android:layout_height="match_parent"
                        android:thumbTint="@color/white"
                        android:progressDrawable="@drawable/audio_progress_bar"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <com.languageapp.immanuel.flashtalk.CircularImageView2
                        android:id="@+id/audio"
                        android:layout_width="@dimen/circular_button_volume_width"
                        android:layout_height="@dimen/circular_button_volume_height"
                        android:src="@drawable/volumetrans2"
                        android:visibility="gone"
                        />

                    <com.languageapp.immanuel.flashtalk.CircularImageView2
                        android:id="@+id/pause"
                        android:layout_width="@dimen/circular_button_volume_width"
                        android:layout_height="@dimen/circular_button_volume_height"
                        android:src="@drawable/pause_icon1"
                        android:visibility="gone"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/forward_button"
                        android:layout_width="@dimen/arrow_button_width"
                        android:layout_height="@dimen/arrow_button_height"
                        android:background="@drawable/arrow_forward_pressed" />

                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.Toolbar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/treb_ms_regular"
            android:gravity="center"
            android:padding="5dp"
            android:text="Let's start with the basics!"
            android:textColor="@color/black"
            android:textSize="@dimen/basic_pronouns_font_size_intro"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/basic_pronouns_height"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/basic_pronouns_vertical_spacing_big"
                    >

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="@dimen/arabic_basic_pronouns_width"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_ripple"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:duplicateParentState="true"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:text="I"
                            android:textColor="@color/black"
                            android:textSize="@dimen/basic_pronouns_font_size_word" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:duplicateParentState="true"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:text="ana"
                            android:textColor="@color/transliteration_color"
                            android:textSize="@dimen/basic_pronouns_font_size_translit"
                            android:textStyle="italic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/basic_pronouns_height"
                            android:layout_weight="1"
                            android:duplicateParentState="true"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:text="أنا"
                            android:textColor="@color/black"
                            android:textSize="@dimen/basic_pronouns_font_size_word" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/basic_pronouns_height"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/basic_pronouns_vertical_spacing_big"
                    >

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="@dimen/arabic_basic_pronouns_width"
                        android:layout_height="@dimen/basic_pronouns_height"
                        android:background="@drawable/custom_ripple"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:text="who"
                            android:textColor="@color/black"
                            android:textSize="@dimen/basic_pronouns_font_size_word" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:text="man"
                            android:textColor="@color/transliteration_color"
                            android:textSize="@dimen/basic_pronouns_font_size_translit"
                            android:textStyle="italic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:text="من"
                            android:textColor="@color/black"
                            android:textSize="@dimen/basic_pronouns_font_size_word"

                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/basic_pronouns_height"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/basic_pronouns_vertical_spacing_big"
                    >

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="@dimen/arabic_basic_pronouns_width"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_ripple"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:text="you (m.)"
                            android:textColor="@color/black"
                            android:textSize="@dimen/basic_pronouns_font_size_word" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:text="enta"
                            android:textColor="@color/transliteration_color"
                            android:textSize="@dimen/basic_pronouns_font_size_translit"
                            android:textStyle="italic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:text="انت"
                            android:textColor="@color/black"
                            android:textSize="@dimen/basic_pronouns_font_size_word" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/basic_pronouns_height"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/basic_pronouns_vertical_spacing_big"
                    >

                    <LinearLayout
                        android:id="@+id/linearLayout4"
                        android:layout_width="@dimen/arabic_basic_pronouns_width"
                        android:layout_height="@dimen/basic_pronouns_height"
                        android:background="@drawable/custom_ripple"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:text="you (f.)"
                            android:textColor="@color/black"
                            android:textSize="@dimen/basic_pronouns_font_size_word" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:text="enti"
                            android:textColor="@color/transliteration_color"
                            android:textSize="@dimen/basic_pronouns_font_size_translit"
                            android:textStyle="italic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:text="انتي"
                            android:textColor="@color/black"
                            android:textSize="@dimen/basic_pronouns_font_size_word" /> />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/basic_pronouns_height"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/basic_pronouns_vertical_spacing_big"
                    >

                    <LinearLayout
                        android:id="@+id/linearLayout5"
                        android:layout_width="@dimen/arabic_basic_pronouns_width"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_ripple"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:text="yes"
                            android:textColor="@color/black"
                            android:textSize="@dimen/basic_pronouns_font_size_word" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:text="aye"
                            android:textColor="@color/transliteration_color"
                            android:textSize="@dimen/basic_pronouns_font_size_translit"
                            android:textStyle="italic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:text="أي"
                            android:textColor="@color/black"
                            android:textSize="@dimen/basic_pronouns_font_size_word" /> />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/basic_pronouns_height"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/basic_pronouns_vertical_spacing_big"
                    >

                    <LinearLayout
                        android:id="@+id/linearLayout6"
                        android:layout_width="@dimen/arabic_basic_pronouns_width"
                        android:layout_height="@dimen/basic_pronouns_height"
                        android:background="@drawable/custom_ripple"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:text="no"
                            android:textColor="@color/black"
                            android:textSize="@dimen/basic_pronouns_font_size_word" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:text="la"
                            android:textColor="@color/transliteration_color"
                            android:textSize="@dimen/basic_pronouns_font_size_translit"
                            android:textStyle="italic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/treb_ms_regular"
                            android:gravity="center"
                            android:text="لا"
                            android:textColor="@color/black"
                            android:textSize="@dimen/basic_pronouns_font_size_word" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout7"
                android:layout_width="@dimen/arabic_basic_pronouns_width"
                android:layout_height="@dimen/basic_pronouns_height"
                android:background="@drawable/custom_ripple"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/basic_pronouns_vertical_spacing_big"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/treb_ms_regular"
                    android:gravity="center"
                    android:text="not"
                    android:textColor="@color/black"
                    android:textSize="@dimen/basic_pronouns_font_size_word" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/treb_ms_regular"
                    android:gravity="center"
                    android:text="moo"
                    android:textColor="@color/transliteration_color"
                    android:textSize="@dimen/basic_pronouns_font_size_translit"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/treb_ms_regular"
                    android:gravity="center"
                    android:text="مو"
                    android:textColor="@color/black"
                    android:textSize="@dimen/basic_pronouns_font_size_word" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout8"
                android:layout_width="@dimen/basic_pronouns_width_big"
                android:layout_height="@dimen/basic_pronouns_height"
                android:background="@drawable/custom_ripple"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/basic_pronouns_vertical_spacing_big"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/treb_ms_regular"
                    android:gravity="center"
                    android:text="hi"
                    android:textColor="@color/black"
                    android:textSize="@dimen/basic_pronouns_font_size_word" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/treb_ms_regular"
                    android:gravity="center"
                    android:text="marhaba"
                    android:textColor="@color/transliteration_color"
                    android:textSize="@dimen/basic_pronouns_font_size_translit"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/treb_ms_regular"
                    android:gravity="center"
                    android:text="مرحبا"
                    android:textColor="@color/black"
                    android:textSize="@dimen/basic_pronouns_font_size_word" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>